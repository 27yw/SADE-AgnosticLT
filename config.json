{
    "name": "ImageNet_LT_ResNeXt50_TSA",
    "n_gpu": 2,
    "arch": {
        "type": "ResNeXt50Model",
        "args": {
            "num_classes": 1000,
            "reduce_dimension": 1,
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 3
        }
    },
    "data_loader": {
        "type": "ImageNetLTDataLoader",
        "args": {
            "data_dir": "../../imagenet",
            "batch_size": 64,
            "shuffle": true,
            "num_workers": 12
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 0.025,
            "weight_decay": 0.0002,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "RIDELoss",
        "args": {
            "reweight": true,
            "reweight_factor": 0.02,
            "reweight_epoch": 80
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CustomLR",
        "args": {
            "step1": 60,
            "step2": 80,
            "gamma": 0.1,
            "warmup_epoch": 5
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/expert3/100k",
        "save_period": 100,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}